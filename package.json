{
  "name": "claude-cli-api",
  "version": "0.1.0",
  "type": "module",
  "description": "OpenAI-compatible REST API server with Claude Code CLI backend and OpenAI passthrough",
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.6.2",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit/",
    "test:integration": "vitest run tests/integration/",
    "lint": "oxlint src/",
    "lint:fix": "oxlint --fix src/",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist/ .tsbuildinfo",
    "preflight": "pnpm lint && pnpm format:check && pnpm typecheck && pnpm test",
    "test:e2e": "bash scripts/integration-test.sh"
  },
  "dependencies": {
    "fastify": "^5.3.3",
    "openai": "^4.91.1",
    "pino": "^9.6.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.0.9",
    "oxlint": "^0.16.6",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.0.9"
  }
}
